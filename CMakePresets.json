{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64",
            "displayName": "x64",
            "description": "Target Windows (64-bit) with the Visual Studio development environment.",
            "inherits": "windows-base",
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "x86",
            "displayName": "x86",
            "description": "Target Windows (32-bit) with the Visual Studio development environment.",
            "inherits": "windows-base",
            "toolset": {
                "value": "host=x86",
                "strategy": "external"
            },
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64 Debug",
            "displayName": "Debug",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 Release",
            "displayName": "Release",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Release)",
            "configurePreset": "x64",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits":["x64 Debug"]
        },
        {
            "name": "x64 RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "configurePreset": "x64",
            "configuration": "RelWithDebInfo",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits":["x64 Debug"]
        },
        {
            "name": "x64 MinSizeRel",
            "displayName": "MinSizeRel",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (MinSizeRel)",
            "configurePreset": "x64",
            "configuration": "MinSizeRel",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits":["x64 Debug"]
        },
        {
            "name": "x86 Debug",
            "displayName": "Debug",
            "description": "x86 Debug",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 Release",
            "displayName": "Release",
            "description": "x86 Release",
            "configurePreset": "x86",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits":["x86 Debug"]
        },
        {
            "name": "x86 RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "x86 RelWithDebInfo",
            "configurePreset": "x86",
            "configuration": "RelWithDebInfo",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits":["x86 Debug"]
        },
        {
            "name": "x86 MinSizeRel",
            "displayName": "MinSizeRel",
            "description": "x86 MinSizeRel",
            "configurePreset": "x86",
            "configuration": "MinSizeRel",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits":["x86 Debug"]
        }
    ],
    "testPresets": [
        {
            "name": "x64 Test",
            "displayName": "Test",
            "description": "x64 Test",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "output": { "outputOnFailure": true },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "x86 Test",
            "displayName": "Test",
            "description": "x86 Test",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "output": { "outputOnFailure": true },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}
