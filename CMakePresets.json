{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/bin/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "environment": {},
            "debug": {
                "find": false,
                "output": false,
                "tryCompile": false
            },
            "errors": {
                "deprecated": true,
                "dev": true
            },
            "warnings": {
                "deprecated": true,
                "dev": true,
                "systemVars": true,
                "uninitialized": false,
                "unusedCli": true
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-windows",
            "displayName": "x64-windows",
            "description": "Target Windows (64-bit) with the Visual Studio development environment.",
            "inherits": "windows-base",
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "x86-windows",
            "displayName": "x86-windows",
            "description": "Target Windows (32-bit) with the Visual Studio development environment.",
            "inherits": "windows-base",
            "toolset": {
                "value": "host=x86",
                "strategy": "external"
            },
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x86"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64 Debug",
            "displayName": "Debug",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
            "configurePreset": "x64-windows",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 Release",
            "displayName": "Release",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Release)",
            "configurePreset": "x64-windows",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "configurePreset": "x64-windows",
            "configuration": "RelWithDebInfo",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 MinSizeRel",
            "displayName": "MinSizeRel",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (MinSizeRel)",
            "configurePreset": "x64-windows",
            "configuration": "MinSizeRel",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 Debug",
            "displayName": "Debug",
            "description": "x86 Debug",
            "configurePreset": "x86-windows",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 Release",
            "displayName": "Release",
            "description": "x86 Release",
            "configurePreset": "x86-windows",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "x86 RelWithDebInfo",
            "configurePreset": "x86-windows",
            "configuration": "RelWithDebInfo",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 MinSizeRel",
            "displayName": "MinSizeRel",
            "description": "x86 MinSizeRel",
            "configurePreset": "x86-windows",
            "configuration": "MinSizeRel",
            "inheritConfigureEnvironment": true,
            "verbose": true
        }
    ],
    "testPresets": [
        {
            "name": "x64 Test",
            "displayName": "Test",
            "description": "x64 Test",
            "configurePreset": "x64-windows",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "output": { "outputOnFailure": true },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "x86 Test",
            "displayName": "Test",
            "description": "x86 Test",
            "configurePreset": "x86-windows",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "output": { "outputOnFailure": true },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
            "hostOS": "Windows",
            "enableMicrosoftCodeAnalysis": true,
            "enableClangTidyCodeAnalysis": false,
            "cacheRoot": "${sourceDir}/bin/${presetName}",
            "intelliSenseOptions": {
                "useCompilerDefaults": true
            },
            "intelliSenseMode": "windows-msvc-x64"
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
            "sourceDir": "$env{HOME}/.vs/${sourceDirName}",
            "copyBuildOutput": false,
            "copySources": true,
            "forceWSL1Toolset": false,
            "rsyncCommandArgs": [
                "-t",
                "--delete",
                "--delete-excluded"
            ],
            "copyOptimizations": {
                "useOptimizations": "RsyncAndSftp",
                "maxSmallChange": 10,
                "rsyncSingleDirectoryCommandArgs": [
                    "-t",
                    "-d"
                ]
            },
            "copyExcludeDirectoriesList": [],
            "copyAdditionalIncludeDirectoriesList": [],
            "copySourcesOptions": {
                "method": "rsync",
                "concurrentCopies": 5,
                "outputVerbosity": "Diagnostic",
                "exclusionList": [
                    ".vs",
                    ".git",
                    "out"
                ]
            }
        }
    }
}
