{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${workspaceRoot}",
            "installDir": "${workspaceRoot}",
            "toolchainFile": "${workspaceRoot}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "debug": {
                "find": false,
                "output": false,
                "tryCompile": false
            },
            "errors": {
                "deprecated": true,
                "dev": true
            },
            "warnings": {
                "deprecated": true,
                "dev": true,
                "systemVars": true,
                "unusedCli": true,
                "uninitialized": false
            },
            "cacheVariables": {},
            "environment": {
                "VCPKG_ROOT": "${workspaceRoot}/vcpkg/"
            },
            "vendor": {}
        },
        {
            "name": "ninja-multi",
            "inherits": "default",
            "displayName": "Ninja Multi-Config",
            "description": "Default build using Ninja Multi-Config generator",
            "generator": "Ninja Multi-Config",
            "hidden": true
        },
        {
            "name": "windows-base",
            "inherits": "default",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "environment": {},
            "cacheVariables": {},
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS":"Windows",
                    "intelliSenseMode": "windows-msvc-x64",
                    "intelliSenseOptions": {
                        "useCompilerDefaults": true
                    },
                    "enableMicrosoftCodeAnalysis": true,
                    "enableClangTidyCodeAnalysis": false
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/${sourceDirName}",
                    "copySources": true,
                    "copyBuildOutput": false,
                    "copyAdditionalIncludeDirectoriesList": [],
                    "copyExcludeDirectoriesList": [],
                    "copySourcesOptions": {
                        "method": "rsync",
                        "outputVerbosity": "Normal",
                        "concurrentCopies": 5,
                        "exclusionList": [
                            ".vs",
                            "out"
                        ]
                    },
                    "copyOptimizations": {
                        "useOptimizations": "RsyncAndSftp",
                        "maxSmallChange": 10,
                        "rsyncSingleDirectoryCommandArgs": [
                            "-t",
                            "-d"
                        ]
                    },
                    "rsyncCommandArgs": [
                        "-t",
                        "--delete",
                        "--delete-excluded"
                    ],
                    "forceWSL1Toolset": false
                }
            }
        },
        {
            "name": "x64",
            "displayName": "x64",
            "description": "Target Windows (64-bit) with the Visual Studio development environment.",
            "inherits": "windows-base",
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "environment": {
                "VCPKG_DEFAULT_TRIPLET": "x64-windows"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_C_COMPILER": "cl.exe"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x64"
                }
            }
        },
        {
            "name": "x86",
            "displayName": "x86",
            "description": "Target Windows (32-bit) with the Visual Studio development environment.",
            "inherits": "windows-base",
            "toolset": {
                "value": "host=86",
                "strategy": "external"
            },
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "environment": {
                "VCPKG_DEFAULT_TRIPLET": "x86-windows"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x86"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64 Debug",
            "displayName": "Debug",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 Release",
            "displayName": "Release",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Release)",
            "configurePreset": "x64",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits": [ "x64 Debug" ]
        },
        {
            "name": "x64 RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "configurePreset": "x64",
            "configuration": "RelWithDebInfo",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits": [ "x64 Debug" ]
        },
        {
            "name": "x64 MinSizeRel",
            "displayName": "MinSizeRel",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (MinSizeRel)",
            "configurePreset": "x64",
            "configuration": "MinSizeRel",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits": [ "x64 Debug" ]
        },
        {
            "name": "x86 Debug",
            "displayName": "Debug",
            "description": "Target Windows (32-bit) with the Visual Studio development environment. (Debug)",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 Release",
            "displayName": "Release",
            "description": "Target Windows (32-bit) with the Visual Studio development environment. (Release)",
            "configurePreset": "x86",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits": [ "x86 Debug" ]
        },
        {
            "name": "x86 RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "Target Windows (32-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "configurePreset": "x86",
            "configuration": "RelWithDebInfo",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits": [ "x86 Debug" ]
        },
        {
            "name": "x86 MinSizeRel",
            "displayName": "MinSizeRel",
            "description": "Target Windows (32-bit) with the Visual Studio development environment. (MinSizeRel)",
            "configurePreset": "x86",
            "configuration": "MinSizeRel",
            "inheritConfigureEnvironment": true,
            "verbose": true,
            "inherits": [ "x86 Debug" ]
        }
    ],
    "testPresets": [
        {
            "name": "x64 Test",
            "displayName": "Test",
            "description": "x64 Test",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "output": { "outputOnFailure": true },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "x86 Test",
            "displayName": "Test",
            "description": "x86 Test",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "output": { "outputOnFailure": true },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}
